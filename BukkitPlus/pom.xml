        <version>2.0</version>
    </parent>

    <packaging>pom</packaging>

    <modules>
        <module>EventAPI</module>
        <module>MaterialAPI</module>
        <module>WorldIteratorAPI</module>
        <module>BukkitUtil</module>
        <module>MenuAPI</module>
    </modules>

    <modelVersion>4.0.0</modelVersion>

    <artifactId>BukkitPlus</artifactId>
    <version>1.0</version>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
